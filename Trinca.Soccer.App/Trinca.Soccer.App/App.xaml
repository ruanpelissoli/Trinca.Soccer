<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
                        xmlns:util="clr-namespace:Trinca.Soccer.App.Util;assembly=Trinca.Soccer.App"
                        x:Class="Trinca.Soccer.App.App">
    <prism:PrismApplication.Resources>
        <ResourceDictionary>
            <util:NegateBooleanConverter x:Key="NegateBooleanConverter" />
            <util:DecimalConverter x:Key="DecimalConverter" />
            <util:PlayerNameConverter x:Key="PlayerNameConverter" />
            <util:PlayerPictureUrlConverter x:Key="PlayerPictureUrlConverter" />
            <util:ShowMatchManagerIconsConverter x:Key="ShowMatchManagerIconsConverter" />
            <util:CurrencyConverter x:Key="CurrencyConverter" />
          
            <x:String x:Key="AppDefaultColor">#000000</x:String>
          
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource AppDefaultColor}"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </prism:PrismApplication.Resources>
</prism:PrismApplication>