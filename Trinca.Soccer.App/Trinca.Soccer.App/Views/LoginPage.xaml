<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Trinca.Soccer.App.Views.LoginPage"
             Title="{Binding Title}">
  <StackLayout Padding="20, 0"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="FillAndExpand">
        <Entry Text="{Binding Username}"
             HorizontalOptions="FillAndExpand"
             Placeholder="Username" />
        <Entry Text="{Binding Password}"
             IsPassword="True"
             HorizontalOptions="FillAndExpand"
             Placeholder="Password" />
      <Button Text="Login"
              Command="{Binding LoginCommand}"
              IsVisible="{Binding ShowLoading, Converter={StaticResource NegateBooleanConverter}}"/>
      <ActivityIndicator IsVisible="{Binding ShowLoading}" IsRunning="{Binding ShowLoading}" Color="#000000" />
    </StackLayout>
</ContentPage>