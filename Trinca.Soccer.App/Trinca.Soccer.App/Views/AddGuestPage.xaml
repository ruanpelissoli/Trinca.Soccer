<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:custom="clr-namespace:Trinca.Soccer.App.CustomControls;assembly=Trinca.Soccer.App"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Trinca.Soccer.App.Views.AddGuestPage"
             Title="{Binding Title}"
             BackgroundColor="White">
    <StackLayout Padding="16, 24">
        <Label Text="Guest Name"
               Style="{StaticResource MatchSubtitle}"/>
        <custom:CustomEntry Text="{Binding Name}"
               Style="{StaticResource Entry}"
               Placeholder="name"/>
        <StackLayout Orientation="Horizontal" 
                     Margin="0, 0, 0, 16"
                     IsVisible="{Binding Match.WithBarbecue}">
            <Switch IsToggled="{Binding WithBarbecue}" 
                    HorizontalOptions="Start"/>
            <Label Text="Aftermatch" 
                   Style="{StaticResource MatchSubtitle}"
                   HorizontalOptions="Start" />
            <Label Text="Barbecue" 
                   Style="{StaticResource MatchSubtitle}"
                   HorizontalOptions="StartAndExpand"                   
                   FontAttributes="Bold" />
        </StackLayout>
        <Button Text="Invite" 
                Style="{StaticResource PrimaryButton}"
                VerticalOptions="Start"
                Command="{Binding AddGuestCommand}" 
                IsVisible="{Binding ShowLoading, Converter={StaticResource NegateBooleanConverter}}"/>
        <ActivityIndicator IsVisible="{Binding ShowLoading}" IsRunning="{Binding ShowLoading}" Color="#000000" />
    </StackLayout>
</ContentPage>